{% extends 'base.html.twig' %}

{% block title %}Commande index{% endblock %}

{% block body %}
    <h1>Commande index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Client</th>
                <th>Client</th>
                <th>QteComm</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.id }}</td>
                <td>{{ commande.client.nom }}</td>
                <td>{{ commande.produit.libelle }}</td>
                <td>{{ commande.qteComm }}</td>
                <td>{{ commande.date ? commande.date|date('Y-m-d') : '' }}</td>
                <td>
                    <a>{{ include('commande/_delete_form.html.twig') }}</a>
                    <a  class="btn btn-dark-green" href="{{ path('commande_show', {'id': commande.id}) }}">show</a>
                    <a class="btn btn-light-green"href="{{ path('commande_edit', {'id': commande.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-default"  href="{{ path('commande_new') }}">Create new</a>
{% endblock %}
