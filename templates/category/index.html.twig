{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Category index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Qte</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.libelle }}</td>
                <td>{{ category.qte }}</td>
                <td>{{ category.prix }}</td>
                <div class="form-inline">
                    <td>
                        <a>{{ include('category/_delete_form.html.twig') }}</a>
                        <a class="btn btn-dark-green" href="{{ path('category_show', {'id': category.id}) }}">show</a>
                        <a class="btn btn-light-green" href="{{ path('category_edit', {'id': category.id}) }}">edit</a>
                    </td>
                </div>

            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('category_new') }}" class="btn btn-default">Create new</a>
{% endblock %}
